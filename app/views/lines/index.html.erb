<h1>Listing lines</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.description %></td>
    <td><%= line.price %></td>
    <td><%= link_to 'Show', [line.invoice, line] %></td>
    <td><%= link_to 'Edit', edit_invoice_line_path(line.invoice, line) %></td>
    <td><%= link_to 'Destroy', [line.invoice, line], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

